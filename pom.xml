            <organization>Elance-ODesk Inc.</organization>
            <organizationUrl>http://elance-odesk.com</organizationUrl>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git@github.com:elance/workplace-jenkins-plugin.git</connection>
